<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Label text = "Enter bus time" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id="time" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <Label text = "Enter bus number" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="number" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <Label text = "Enter days" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <TextField fx:id="day" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <Label text = "Enter numbers of seats" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
    <TextField fx:id="seats" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
    <Label text = "Enter stations" GridPane.columnIndex="0" GridPane.rowIndex="8"/>
    <TextField fx:id="stat" GridPane.columnIndex="0" GridPane.rowIndex="9"/>
    <Label text = "Enter arrival time" GridPane.columnIndex="0" GridPane.rowIndex="10"/>
    <TextField fx:id="arrtime" GridPane.columnIndex="0" GridPane.rowIndex="11"/>
    <Button text = "Add" GridPane.columnIndex="0" GridPane.rowIndex="12" onAction="#add"/>
    <Label text = "Enter index to delete" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
    <TextField fx:id="toDelete" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <Button text = "Delete" GridPane.columnIndex="1" GridPane.rowIndex="2" onAction="#delete"/>
    <Label text = "Enter bus number to find" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
    <TextField fx:id="toFind" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
    <Button text = "Delete" GridPane.columnIndex="2" GridPane.rowIndex="2" onAction="#find"/>
</GridPane>
